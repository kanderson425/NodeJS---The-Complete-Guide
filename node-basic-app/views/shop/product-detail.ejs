<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main class="centered">
                    <h1><%= pageTitle %></h1>
                    <hr>
                    <div>
                        <img class="productImg" src="<%= product.imageUrl %>" alt="<%= product.title %>">
